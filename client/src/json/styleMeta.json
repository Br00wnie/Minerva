{
  "color": {
    "type": "color",
    "group": "font"
  },
  "font-size": {
    "type": "number",
    "min": 1,
    "group": "font"
  },
  "font-family": {
    "type": "select",
    "options": [
      { "label": "Arial", "value": "Arial" },
      {
        "label": "Times New Roman",
        "value": "Times New Roman"
      }
    ],
    "group": "font"
  },
  "text-align": {
    "type": "select",
    "options": [
      { "label": "К левому краю", "value": "left" },
      { "label": "К правому краю", "value": "right" },
      { "label": "К центру", "value": "center" },
      { "label": "К ширине", "value": "justify" }
    ],
    "group": "positioning"
  },
  "line-height": {
    "type": "number",
    "step": 0.1,
    "group": "positioning"
  },
  "margin-top": {
    "type": "number",
    "step": 0.1,
    "min": 0,
    "group": "positioning",
    "subgroup": "margin"
  },
  "margin-right": {
    "type": "number",
    "step": 0.1,
    "min": 0,
    "group": "positioning",
    "subgroup": "margin"
  },
  "margin-bottom": {
    "type": "number",
    "step": 0.1,
    "min": 0,
    "group": "positioning",
    "subgroup": "margin"
  },
  "margin-left": {
    "type": "number",
    "step": 0.1,
    "min": 0,
    "group": "positioning",
    "subgroup": "margin"
  },
  "paragraph-spacing": {
    "type": "number",
    "step": 0.1,
    "min": 0,
    "group": "positioning"
  },
  "text-indent": {
    "type": "number",
    "step": 0.1,
    "min": 0,
    "group": "positioning"
  },
  "background-color": {
    "type": "color",
    "group": "page"
  }
}
